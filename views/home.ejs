<script type="text/javascript">
  window.onload = function (){
    var pic = 1;
    $($('.arrow.right')[0]).on('click',(ev)=>{
      $($('.item'+pic)[0]).hide();
      if(pic+1 > 10){
        pic = 1;
      }
      else{
        pic++;
      }
      $($('.item'+pic)[0]).show();
    });
    $($('.arrow.left')[0]).on('click',(ev)=>{
      $($('.item'+pic)[0]).hide();
      if(pic-1 < 1){
        pic = 10;
      }
      else{
        pic--;
      }
      $($('.item'+pic)[0]).show();
    });

  }
</script>
